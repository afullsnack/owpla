---
// @ts-ignore
import training1 from "@assets/training-1.png";
import training2 from "@assets/training-2.png";
import training3 from "@assets/training-3.png";
import { Picture } from "astro:assets";

const features = [
  {
    title: "Project Management",
    description:
      "Itsekiri youths interested in Project Management will get trained on different project management tools and global standard practices (Coming soon)",
    icon: "bx:bxs-briefcase",
    img: training1,
  },
  {
    title: "Engineering",
    description:
      "In partnership with Rucotech, Olu of Warri Palace Liaison Authority (OWPLA) is organizing a two-weeks upskill training for Engineering and Natural Science graduates Register Now",
    icon: "bx:bxs-window-alt",
    img: training2,
  },
  {
    title: "Information Technology",
    description:
      "We will organize trainings to all Itsekiri youths interested in starting a career in IT, irrespective of their field, or previous experience (Coming Soon)",
    icon: "bx:bxs-data",
    img: training3,
  },
];
---

<div class="mt-16 md:mt-0" id="trainings">
  <h2 class="text-4xl lg:text-5xl font-bold lg:tracking-tight">
    Training Areas
  </h2>
</div>

<div class="grid sm:grid-cols-2 md:grid-cols-3 mt-8 gap-16">
  {
    features.map((item) => (
      <div class="grid gap-4 items-start">
        <div class="mt-1 shrink-0">
          {item.img && (
            <Picture
              src={item.img}
              alt="Astronaut in the air"
              widths={[200, 400, 600]}
              sizes="(max-width: 800px) 100vw, 620px"
              loading="eager"
              format="avif"
            />
          )}
        </div>
        <div>
          <h3 class="font-semibold text-lg">{item.title}</h3>{" "}
          <p class="text-slate-500 mt-2 leading-relaxed">{item.description}</p>
        </div>
      </div>
    ))
  }
</div>
